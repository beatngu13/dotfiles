# Update Homebrew, Homebrew-Cask and Mac App Store.
function up() {
    sudo -v

    echo "Update and upgrade Homebrew ..."
    brew update
    brew upgrade

    echo "Upgrade Homebrew-Cask ..."
    brew cask upgrade

    echo "Upgrade Mac App Store ..."
    mas upgrade
}

# Remove directory content without deleting the directory itself.
function rmc() {
    dir="${1}"
    rm -r "${dir}"
    mkdir "${dir}"
}
