#!/usr/bin/env sh

# Remove directory content without deleting the directory itself.
function rmc() {
    dir="${1}"
    rm -r "${dir}"
    mkdir "${dir}"
}

# Update Homebrew and Mac App Store.
function update_all() {
    sudo -v

    echo "Update Homebrew ..."
    brew update

    echo "Upgrade Homebrew ..."
    brew upgrade

    echo "Upgrade Mac App Store ..."
    mas upgrade
}
